{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "ES2018"
  },
  "include": [
    "src/**/*",
  ]
}
